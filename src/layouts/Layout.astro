---
import '../style/main.css'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

interface Props {
  title: string
  rowsMax?: boolean
}

const { title, rowsMax } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dominick Vale â€” Portfolio 2024" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <!-- fonts -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inconsolata:wdth,wght@50..200,200..900&family=Orbitron:wght@400..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
  </style>
  <body class="relative flex max-h-screen flex-col font-body">
    <Navbar />
    <main class:list={[  "my-12 grid h-full w-full flex-1 grid-cols-12", rowsMax && 'auto-rows-max' ] }>
      <slot />
    </main>
    <Footer />
  </body>
</html>
