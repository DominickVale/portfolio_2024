<!-- </div> -->
  <div class="fixed left-6 bottom-6 text-inactive text-xs flex gap-4 opacity-40 hover:opacity-100 transition-opacity duration-300">
    <p>Psst... In a hurry?</p>
    <a class="text-copy" href="/hurry">If yes, click here.</a>
  </div>

  <div class="fixed right-6 bottom-6 text-inactive text-xs opacity-40">
    <p>PORTFOLIO V.2024.8</p>
  </div>

  <div class="inner mt-[10vh] flex h-1/3 flex-col items-center gap-14">
    <div class="flex flex-col items-center">
      <h1 class="text-mono mb-6 text-sm font-light tracking-widest text-white">LOADINGâ€¦</h1>
      <p class="description text-mono max-w-[20rem] text-xs text-inactive">0%</p>
      <div
        id="progress-bar"
        class="relative mt-3 h-[0.0625rem] w-52 overflow-hidden bg-lines"
        role="progressbar"
        aria-valuemin="0"
        aria-valuemax="100"
        aria-valuenow="0"
      >
        <div
          style="--progress: 0;"
          class="progress absolute left-0 h-full w-full origin-left scale-x-[var(--progress)] bg-white drop-shadow-glow-harder"
        >
        </div>
      </div>
    </div>

    <div id="preloader-buttons" class="hidden flex-col items-center gap-6">
      <Btn
        data-text-scramble="ENTER"
        data-text-scramble-speed="20"
        data-audio
        data-audio-stopon="mouseout mousedown"
        data-audio-mouseover="vibration loop fadeIn:1 fadeOut:1.5 volume:0.2"
        class="mx-auto h-20 w-52 justify-center overflow-hidden whitespace-nowrap text-nowrap bg-background-dark-02 backdrop-blur-[16px]"
        frame>ENTER</Btn
      >
      <Btn class="text-inactive">WITH NO SOUND</Btn>
    </div>
  </div>
</section>

<div id="flash-screen" class="pointer-events-none fixed bottom-0 left-0 right-0 top-0 z-[100] bg-primary-lightest opacity-0 mix-blend-lighten"></div>
