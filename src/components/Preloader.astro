---
import Btn from '../components/Btn.astro'
---

<section id="preloader" class="fixed left-0 top-0 z-[100] flex hidden h-full w-full flex-col items-center justify-center text-center">
<!-- <div class="fixed left-[45%] bottom-6 text-inactive text-xs flex gap-4 opacity-50"> -->
