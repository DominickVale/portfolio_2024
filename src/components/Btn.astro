const { small, class: classes, frame, ...rest } = Astro.props

const Component = Astro.props.href ? 'a' : 'button'
---

<Component
  class:list={[
    'relative text-xs font-black tracking-button text-white',
    frame && 'p-2 pl-3 pt-4 pr-[7vw] font-bold',
    classes,
  ]}
  {...rest}
>
  <slot />
  {frame && <div class="fui-corners" />}
</Component>
