---
const { small, class: classes, frame, ...rest } = Astro.props

const Component = Astro.props.href ? 'a' : 'button'
---

<Component
  class:list={[
    'relative text-xs font-black tracking-button text-white',
    frame && 'frame h-7 w-32 flex items-center font-bold backdrop-blur-[1px]',
    classes,
  ]}
  {...rest}
>
  <slot />
  {frame && <div class="fui-corners pointer-events-none" />}
</Component>
