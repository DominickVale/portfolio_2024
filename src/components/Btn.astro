---
import type { HTMLAttributes } from 'astro/types'

type LinkProps = {
  link: string
} & HTMLAttributes<'a'>

type Props = {
  class?: string
  small?: boolean
  link?: string
} & (LinkProps | HTMLAttributes<'button'>)

const { small, class: classes, link, ...rest } = Astro.props

const Component = link ? "a" : "button"
---

<Component class:list={[ "text-xs text-white", classes]} {...rest}>
  <slot />
</Component>
