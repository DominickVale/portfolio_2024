---
import Btn from '../components/Btn.astro'
interface Props {}

const {} = Astro.props

---

<nav class="z-10 mt-6 sm:mt-12 text-xs fixed left-0 w-full text-inactive">
  <ul class="hidden sm:grid grid-cols-12" >
    <li class="col-start-2 col-span-1 text-left"><a class="active" href="/" aria-current="page">HOME</a></li>
    <div class="absolute left-0 right-0 flex justify-center pointer-events-none">
      <div class="flex gap-10 pointer-events-auto">
        <li><a href="/works">WORKS</a></li>
        <li><a href="/blog">BLOG</a></li>
        <li><a href="/lab">LAB</a></li>
      </div>
    </div>
    <li class="col-start-8 col-span-4 flex justify-end"><a href="/contact" class="mix-blend-difference">CONTACT</a></li>
  </ul>
</nav>

<style>
nav li > a.active {
  position: relative;
  &::before{
    content: '';
    position: absolute;
    left: -50%;
    top: 33%;
    background-color: theme('colors.primary');
    height: theme("height.1");
    width: theme("height.1");
  }
  @apply text-white;
}
</style>
